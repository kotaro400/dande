<% content_for(:title) { 'Feature' } %>

<div class="features-wrapper">
  <h1>Feature</h1>

  <div class="features">
    <% @features.each do |feature| %>
      <%= link_to feature do %>
        <div class="feature">
          <%= image_tag feature.image %>

          <div class="title-and-details">
            <h2><%= feature.title %></h2>
            <p><%= feature.details %></p>
          </div>
        </div>

        <%= render "feature_card", feature: feature %>
      <% end %>
    <% end %>
  </div>
</div>

<div class="search-content only-mobile">
  <span id="close-search">×</span>
  <%= image_tag "black-logo", class: "mobile-search-logo" %>
  <%= render "articles/shared/search_form", ajax: false %>

  <div class="features-thumbnail">
    <h3>特集記事</h3>
    <% Feature.sort_from_newest_to_oldest.each do |feature| %>
      <div class="feature-thumbnail">
        <%= link_to feature do %>
          <%= image_tag feature.image %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<%= javascript_pack_tag "mobile_menu" %>
