<div id="article-search">
  <%= form_with url: search_articles_path, method: :get, local: !ajax do |form| %>
    <%= form.text_field :word, placeholder: "記事をさがす" %>
    <%= form.submit "検索" %>

    <div class="top-tags">
      <% Tag.all.each do |tag| %>
        <span class="top-tag">
          <%= link_to tag.name, search_articles_path(tag: tag.name), remote: ajax %>
        </span>
      <% end %>
    </div>
  <% end %>

  <div id="res-articles">
  </div>
</div>
